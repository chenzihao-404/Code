/* pages/details/details.wxss */

.goods_info{
    background: #fff;
    margin-bottom: 10px;
}
.goods_title{
    font-size: 14px;
    line-height: 20px;
    color:#535353;
    padding: 10px 80px 10px 10px;
    height: 40px;
    position: relative;
}
.collect{
    position: absolute;
    top:10px;
    right: 0px;
    text-align: center;
    font-size: 12px;
    border-left:1px solid #e5e5e5;
    width: 70px;
    height: 40px;
}
.collect image{
    width: 24px;
    height: 24px;
}
.collect text{
    width: 100%;
    display: block;
    line-height: 10px;
}
.goods_price{
    padding:10px;
    font-size: 16px;
    color:#ff0000;
}
.goods_price .oldprice{
    font-size: 12px;
    margin-left: 10px;
    color:#535353;
    text-decoration: line-through;
}
.goods_deliver{
    padding:10px;
    background: #fff;
    font-size: 10px;
    color:#676767;
    border-top: 1px solid #e5e5e5;
}
.goods_content{
    margin-bottom: 10px;
    background: #fff;
    padding:10px;
    min-height: 40px;
    position: relative;
}

.goods_content image{
    height: 40px;
    width: 40px;
    position: absolute;
    top:10px;
    left: 10px;
}
.goods_content text{
    margin-left: 50px;
    font-size: 12px;
    line-height: 18px;
    display: block;
}
.goods_detail{
    background: #fff;
    padding:10px 0;
    margin-bottom: 60px;
}

.goods_bottom{
    position: fixed;
    left:0px;
    bottom: 0px;
    z-index: 100;
    height: 50px;
    background: #fff;
    border-top:1px solid #e5e5e5;
    width: 100%;
}

.goods_bottom image{
    width:25px;
    height: 25px;
}
.goods_bottom .li{
    float: left;
    width: 25%;
    text-align: center;
    height: 50px;
    line-height: 50px;
    font-size: 12px;
    color:#fff;
}
.goods_bottom .li.dv1{
    background: #FFA500;
}
.goods_bottom .li.dv2{
    background: #00AAEF;
}
.goods_bottom .li.dv3{
    background: #69C3AA;
}
.goods_bottom .li .item{
    height: 25px;
    width: 25px;
    margin:0 auto;
    position: relative;
    margin-top:5px;
}
.goods_bottom .li .item .num{
    position: absolute;
    width: 14px;
    height: 14px;
    line-height:14px;
    border-radius: 50%;
    top:2px;
    right: -7px;
    font-size: 10px;
    background: #ff0000;
    color:#fff;
}