/* pages/pay/pay.wxss */
.pay_address{
    background:#fff;
    position: relative;
}
.address_icon,.pay_sel{
    width: 20px;
    height: 20px;
    position: absolute;
    top:20px;
}
.address_icon{
    left:5px;
}
.pay_sel{
    right:5px;
}
.address_info{
    margin: 0px 25px;
    padding:10px 0px;
}
.address_info text{
    display: block;
    width: 100%;
    font-size: 14px;
}

.table{
    margin:10px 0px;
    background: #fff;
}

.table .tr{
    text-align: center;
    border-bottom:1px solid #F5F6F7;
}   
.table .tr.header .td{
    font-size: 14px;
}
.table .tr .td{
    height: 40px;
    line-height: 40px;
    display: inline-block;
    width: 20%;
    font-size: 12px;
    float: left;
}
.table .tr .td.td_goods{
    width: 60%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    height: 40px;
    text-indent: 5px;
}

.remarks{
    background: #fff;
    font-size: 14px;
    padding: 10px;
}

.car_btn{
    position: fixed;
    left:0px;
    bottom: 0px;
    width: 100%;
    height: 50px;
    line-height:50px;
    font-size: 14px;
    color:#000;
    background: #fff;
    border-bottom: 1px solid #E5E5E5;
}
.car_btn .btn{
    width: 80px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    color:#fff;
    background: #FF7E3A;
    display: block;
    float: right;
    border-radius: 2px;
    margin: 10px 10px 0 0 ;
}
.car_btn text{
    display: inline-block;
    margin-left: 10px;
}
.car_btn text.total{
    color:#FF0000;
}